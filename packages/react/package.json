{
  "name": "@z-payment/react",
  "version": "0.1.0",
  "description": "React hooks and components for Z-Payment - Confidential token operations with FHE",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "echo 'Build not required for TypeScript source'",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf node_modules dist"
  },
  "dependencies": {
    "@z-payment/core": "workspace:*",
    "ethers": "catalog:",
    "graphql": "catalog:",
    "graphql-request": "catalog:",
    "viem": "catalog:"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "wagmi": "^2.0.0"
  },
  "devDependencies": {
    "@types/bun": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitejs/plugin-react": "^4.3.4",
    "typescript": "catalog:",
    "vitest": "catalog:",
    "happy-dom": "catalog:",
    "@testing-library/react": "catalog:",
    "@testing-library/user-event": "catalog:",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "keywords": [
    "react",
    "hooks",
    "fhe",
    "zama",
    "privacy",
    "confidential",
    "web3"
  ],
  "author": "devasher",
  "license": "MIT"
}
