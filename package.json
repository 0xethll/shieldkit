{
  "name": "z-payment",
  "version": "0.1.0",
  "private": true,
  "description": "Universal Private Payment Protocol - Transform any ERC20 token into confidential assets using Zama's FHE",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "viem": "^2.34.0",
      "ethers": "^6.15.0",
      "graphql": "^16.12.0",
      "graphql-request": "^7.3.4",
      "@zama-fhe/relayer-sdk": "0.3.0-5",
      "typescript": "^5.8.0",
      "@types/bun": "^1.1.13",
      "@types/react": "^19",
      "@types/react-dom": "^19",
      "vitest": "^2.1.0",
      "happy-dom": "^15.0.0",
      "@testing-library/react": "^16.0.0",
      "@testing-library/user-event": "^14.5.0",
      "@vitest/ui": "^2.1.0"
    }
  },
  "scripts": {
    "dev": "bun run --filter='web' dev",
    "build": "bun run build:packages && bun run build:apps",
    "build:packages": "bun run --filter='./packages/*' build",
    "build:apps": "bun run --filter='./apps/*' build",
    "test": "bun run --filter='./packages/*' test",
    "typecheck": "bun run --filter='*' typecheck",
    "lint": "bun run --filter='*' lint",
    "clean": "bun run --filter='*' clean && rm -rf node_modules",
    "dev:web": "bun run --filter='web' dev",
    "dev:core": "bun run --filter='@z-payment/core' dev"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.8.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/0xethll/Z-Payment"
  },
  "keywords": [
    "fhe",
    "zama",
    "privacy",
    "confidential",
    "erc20",
    "erc7984",
    "defi"
  ],
  "author": "devasher",
  "license": "MIT"
}
